<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shawnimitch.fitorflab.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#2ca5f5"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            android:id="@+id/weightBtn">

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/weight2x"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/weightImg"
                android:src="@drawable/weight2x"
                android:layout_width="120dp" />

            <EditText
                android:layout_height="wrap_content"
                android:text="Weight Lifting"
                android:ems="10"
                android:id="@+id/weightText"
                android:paddingLeft="5dp"
                android:layout_alignBottom="@+id/lotusImg"
                android:layout_alignParentBottom="true"
                android:paddingBottom="27dp"
                android:textStyle="bold"
                android:layout_width="125dp"
                android:textColor="#FFF"
                android:inputType="none"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@android:color/transparent" />

            <EditText
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="Do you even lift?"
                android:ems="10"
                android:id="@+id/liftText"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:textColor="#FFF"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@android:color/transparent"
                android:paddingBottom="8dp"
                android:paddingLeft="5dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="10 sets"
                android:ems="10"
                android:id="@+id/setsText"
                android:gravity="right"
                android:paddingRight="10dp"
                android:padding="5dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#20000000"
                android:textColor="#FFF"
                android:layout_toEndOf="@+id/weightImg"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="30%"
                android:ems="10"
                android:id="@+id/weightPercent"
                android:textColor="#FFF"
                android:paddingRight="8dp"
                android:textSize="27sp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/weightImg"
                android:gravity="right"
                android:layout_marginLeft="20dp"
                android:background="@android:color/transparent"
                android:paddingBottom="8dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#916bcd"
            android:layout_weight="1"
            android:id="@+id/yogaBtn">

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/lotus2x"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/lotusImg"
                android:layout_width="120dp"
                android:src="@drawable/lotus2x" />

            <EditText
                android:layout_height="wrap_content"
                android:text="Yoga"
                android:ems="10"
                android:id="@+id/yogaText"
                android:paddingLeft="5dp"
                android:layout_alignBottom="@+id/lotusImg"
                android:layout_alignParentBottom="true"
                android:paddingBottom="27dp"
                android:textStyle="bold"
                android:layout_width="125dp"
                android:textColor="#FFF"
                android:inputType="none"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@android:color/transparent" />

            <EditText
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="Namaste"
                android:ems="10"
                android:id="@+id/namasteText"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:textColor="#FFF"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@android:color/transparent"
                android:paddingBottom="8dp"
                android:paddingLeft="5dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="1 hour"
                android:ems="10"
                android:id="@+id/hoursText"
                android:gravity="right"
                android:paddingRight="10dp"
                android:padding="5dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#20000000"
                android:textColor="#FFF"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/lotusImg"
                android:layout_marginLeft="30dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="10%"
                android:ems="10"
                android:id="@+id/yogaPercent"
                android:textSize="27sp"
                android:textColor="#FFF"
                android:paddingRight="8dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/lotusImg"
                android:gravity="right"
                android:layout_marginLeft="20dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@android:color/transparent"
                android:paddingBottom="8dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#52ad56"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:id="@+id/cardioBtn">

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/heart2x"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/heartImg"
                android:src="@drawable/heart2x"
                android:layout_width="120dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="20%"
                android:ems="10"
                android:id="@+id/cardioPercent"
                android:textSize="27sp"
                android:layout_alignParentBottom="true"
                android:textColor="#FFF"
                android:paddingRight="8dp"
                android:layout_toEndOf="@+id/heartImg"
                android:gravity="right"
                android:layout_marginLeft="20dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@android:color/transparent"
                android:paddingBottom="8dp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="Cardio"
                android:ems="10"
                android:id="@+id/cardioText"
                android:paddingLeft="5dp"
                android:layout_alignBottom="@+id/lotusImg"
                android:layout_alignParentBottom="true"
                android:paddingBottom="27dp"
                android:textStyle="bold"
                android:layout_width="125dp"
                android:textColor="#FFF"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@android:color/transparent" />

            <EditText
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="Run like Bolt"
                android:ems="10"
                android:id="@+id/runText"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:textColor="#FFF"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@android:color/transparent"
                android:paddingBottom="8dp"
                android:paddingLeft="5dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="5 miles"
                android:ems="10"
                android:id="@+id/milesText"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:paddingRight="10dp"
                android:padding="5dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#20000000"
                android:textColor="#FFF"
                android:layout_toEndOf="@+id/heartImg"
                android:layout_marginLeft="30dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>

