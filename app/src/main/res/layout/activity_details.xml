<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shawnimitch.fitorflab.DetailsActivity"
    android:background="#2ca5f5">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Weight Lifting"
        android:ems="10"
        android:id="@+id/weightTitle"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textColor="#FFF"
        android:textColorLink="@android:color/transparent"
        android:background="@android:color/transparent"
        android:layout_marginBottom="10dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/weight2x"
        android:id="@+id/exerciseImage"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#20000000">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Mark it Complete"
            android:ems="10"
            android:id="@+id/editText2"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:clickable="false"
            android:textColorLink="@android:color/transparent"
            android:background="@android:color/transparent"

            android:focusableInTouchMode="false"
            android:focusable="false"
            android:cursorVisible="false" />

        <CheckBox
            android:text="Activity 1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFF"
            app:buttonTint="#FFF" />

        <CheckBox
            android:text="Activity 2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFF"
            app:buttonTint="#FFF" />

        <CheckBox
            android:text="Activity 3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFF"
            app:buttonTint="#FFF" />

        <CheckBox
            android:text="Activity 4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFF"
            app:buttonTint="#FFF" />

        <CheckBox
            android:text="Activity 5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFF"
            app:buttonTint="#FFF" />

    </LinearLayout>
</LinearLayout>
